    "# 1. Ask the user to enter a positive integer\n",
    "n = int(input(\"Enter a positive integer: \"))\n",
    "\n",
    "# 2. Use a `for` loop to print all numbers from 1 to n on separate lines\n",
    "print(\"Numbers from 1 to\", n, \":\")\n",
    "for i in range(1, n + 1):\n",
    "    print(i)\n",
    "\n",
    "# 3. Use a `while` loop to calculate the sum of all numbers from 1 to n\n",
    "sum_of_numbers = 0\n",
    "current = 1\n",
    "while current <= n:\n",
    "    sum_of_numbers += current\n",
    "    current += 1\n",
    "\n",
    "# Print the sum\n",
    "print(\"The sum of all numbers from 1 to\", n, \"is:\", sum_of_numbers)\n"
